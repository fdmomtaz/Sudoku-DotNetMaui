            <Button Grid.Column="2" Grid.Row="1" Text="3" IsEnabled="{Binding AvailableNumbers[2]}" Style="{StaticResource UniqueButtonStyle}" Command="{Binding PlaceNumber}" CommandParameter="3"/>
            <Button Grid.Column="3" Grid.Row="1" Text="4" IsEnabled="{Binding AvailableNumbers[3]}" Style="{StaticResource UniqueButtonStyle}" Command="{Binding PlaceNumber}" CommandParameter="4"/>
            <Button Grid.Column="4" Grid.Row="1" Text="5" IsEnabled="{Binding AvailableNumbers[4]}" Style="{StaticResource UniqueButtonStyle}" Command="{Binding PlaceNumber}" CommandParameter="5"/>
            <Button Grid.Column="5" Grid.Row="1" Text="6" IsEnabled="{Binding AvailableNumbers[5]}" Style="{StaticResource UniqueButtonStyle}" Command="{Binding PlaceNumber}" CommandParameter="6"/>
            <Button Grid.Column="6" Grid.Row="1" Text="7" IsEnabled="{Binding AvailableNumbers[6]}" Style="{StaticResource UniqueButtonStyle}" Command="{Binding PlaceNumber}" CommandParameter="7"/>
