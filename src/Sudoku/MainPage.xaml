            <Button Grid.Column="8" Grid.Row="1" Text="9" IsEnabled="{Binding AvailableNumbers[8]}" Style="{StaticResource UniqueButtonStyle}" Command="{Binding PlaceNumber}" CommandParameter="9"/>
