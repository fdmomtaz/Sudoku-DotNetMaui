<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Sudoku.MainPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="BorderColor" Value="#4157E2" />
                <Setter Property="CornerRadius" Value="3" />
                <Setter Property="HeightRequest" Value="32" />
                <Setter Property="WidthRequest" Value="32" />
                <Setter Property="Padding" Value="0" />
            </Style>
            
            <Style TargetType="Button" x:Key="UniqueButtonStyle">
                <Setter Property="HeightRequest" Value="52" />
                    <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
                                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver" />
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            
            <Style TargetType="Button" x:Key="ActionBtn">
            </Style>

            <toolkit:IsNotNullConverter x:Key="IsNotNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="100, 32, 32, 32, 3, 32, 32, 32, 3, 32, 32, 32, *,  *, *" ColumnDefinitions="*, 32, 32, 32, 3, 32, 32, 32, 3, 32, 32, 32, *">
        <Rectangle Grid.Row="{Binding SelectedRow}" IsVisible="{Binding SelectedNumber, Converter={StaticResource IsNotNullConverter}}" Grid.Column="1" Grid.ColumnSpan="11" Fill="#59A2EB" Opacity=".5"/>
        <Rectangle Grid.Row="1" Grid.Column="{Binding SelectedColumn}" IsVisible="{Binding SelectedNumber, Converter={StaticResource IsNotNullConverter}}" Grid.RowSpan="11" Fill="#59A2EB" Opacity=".5"/>

        <Rectangle Grid.Row="{Binding SelectedBoxRow}" Grid.Column="{Binding SelectedBoxColumn}" Grid.ColumnSpan="3" Grid.RowSpan="3" IsVisible="{Binding SelectedNumber, Converter={StaticResource IsNotNullConverter}}" Fill="#59A2EB" Opacity=".5"/>

        <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="12" HeightRequest="30" Spacing="10" HorizontalOptions="End">
            <ImageButton Source="{StaticResource IconSave}" />
            <ImageButton Source="{StaticResource IconClose}" />
        </HorizontalStackLayout>


        <!-- Row 1 -->
        <Button Grid.Row="1" Grid.Column="1" Text="{Binding SudokuArray[0]}" Command="{Binding SolveCommand}" CommandParameter="0" />
        <Button Grid.Row="1" Grid.Column="2" Text="{Binding SudokuArray[1]}" Command="{Binding SolveCommand}" CommandParameter="1" />
        <Button Grid.Row="1" Grid.Column="3" Text="{Binding SudokuArray[2]}" Command="{Binding SolveCommand}" CommandParameter="2" />

        <Rectangle Grid.Row="1" Grid.Column="4" Grid.RowSpan="11" Fill="#596DEB" HorizontalOptions="Fill" />

        <Button Grid.Row="1" Grid.Column="5" Text="{Binding SudokuArray[3]}" Command="{Binding SolveCommand}" CommandParameter="3" />
        <Button Grid.Row="1" Grid.Column="6" Text="{Binding SudokuArray[4]}" Command="{Binding SolveCommand}" CommandParameter="4" />
        <Button Grid.Row="1" Grid.Column="7" Text="{Binding SudokuArray[5]}" Command="{Binding SolveCommand}" CommandParameter="5" />
        
        <Rectangle Grid.Row="1" Grid.Column="8"  Grid.RowSpan="11" Fill="#596DEB" HorizontalOptions="Fill" />

        <Button Grid.Row="1" Grid.Column="9" Text="{Binding SudokuArray[6]}" Command="{Binding SolveCommand}" CommandParameter="6" />
        <Button Grid.Row="1" Grid.Column="10" Text="{Binding SudokuArray[7]}" Command="{Binding SolveCommand}" CommandParameter="7" />
        <Button Grid.Row="1" Grid.Column="11" Text="{Binding SudokuArray[8]}" Command="{Binding SolveCommand}" CommandParameter="8" />

        
